.games_container
  %h3
    = Date.today
    = "(#{@games.size} meczÃ³w)"
  .games
    - @games.each do |game|
      - at_stats = game.team_stats(82, 'a')
      - at_stats10 = game.team_stats(10, 'a')
      - ht_stats = game.team_stats(82, 'h')
      - ht_stats10 = game.team_stats(10, 'h')
      .game
        .td.teams
          .away
            = game.a_team
          .home
            = game.h_team
        - if game.total
          .td.score
            .away
              = game.a_score
            .home
              = game.h_score

        
          - if game.over == 1
            .td.line_score.over
              = "O (#{game.total - game.line})"
              = game.line
          - elsif game.over == -1
            .td.line_score.under
              = "U (#{game.total - game.line})"
              = game.line
          - else
            .td.line_score.push
              = "P"
              = game.line
        - else
          .td.line
            = game.line
        .td.o_u
          .away
            = "#{at_stats[:o_u]} (#{at_stats10[:o_u]})"
          .home
            = "#{ht_stats[:o_u]} (#{ht_stats10[:o_u]})"
        .td.o_u_ah
          .away
            = "A: #{at_stats[:away][:o_u]} (#{at_stats10[:away][:o_u]})"
          .home
            = "H: #{ht_stats[:home][:o_u]} (#{ht_stats10[:home][:o_u]})"
        .td.totals
          .away
            = "#{(at_stats[:total] - game.line).round} (#{(at_stats10[:total] - game.line).round})" if game.line > 0
          .home
            = "#{(ht_stats[:total] - game.line).round} (#{(ht_stats10[:total] - game.line).round})" if game.line > 0
        .td.totals_ah
          .away
            = "A: #{(at_stats[:away][:total] - game.line).round} (#{(at_stats10[:away][:total] - game.line).round})"
          .home
            = "H: #{(ht_stats[:home][:total] - game.line).round} (#{(ht_stats10[:home][:total] - game.line).round})"
        .td.last_games
          .away
            - game.a_team_last_games(10).each do |ag|
              - over = ag.total - ag.line
              - if over > 0
                .ag.over
                  = over
              - elsif over < 0
                .ag.under
                  = over
              -else
                .ag.push
                  =over
          .home
            - game.h_team_last_games(10).each do |hg|
              - over = hg.total - hg.line
              - if over > 0
                .hg.over
                  = over
              - elsif over < 0
                .hg.under
                  = over
              -else
                .hg.push
                  =over
